def usuario_escolhe_jogada (n, m):
    jogadaValida = False
    while (jogadaValida == False):
        try:
            retirarPecas = int(input("Quantas peças você vai tirar? "))
            print()
        except ValueError as ve:
            print ("Oops! Jogada inválida! Tente de novo.")
            print ()
            continue
        if (retirarPecas > 0 and retirarPecas <= n and retirarPecas <= m):
            jogadaValida = True
            retirarPecas = int(retirarPecas)
            return retirarPecas
            break
        else:
            print ("Oops! Jogada inválida! Tente de novo.")
            print ()

def computador_escolhe_jogada (n, m):
    retirarPecas = 1
    while (retirarPecas < (m + 1) and (n - retirarPecas) >= 0):
        if ((n - retirarPecas) % (m +1) == 0):
            return retirarPecas
            break
        if (n - retirarPecas == 0):
            return retirarPecas
        else:
            retirarPecas += 1

def teste ():
    
    if (computador_escolhe_jogada (10, 2) == 1):
        print ("ok")
    else:
        print ("nok")
        
    if (computador_escolhe_jogada (18, 3) == 2):
        print ("ok")
    else:
        print ("nok")
        
    if (computador_escolhe_jogada (5, 2) == 2):
        print ("ok")
    else:
        print ("nok")
        
    if (computador_escolhe_jogada (23, 4) == 3):
        print ("ok")
    else:
        print ("nok")
    if (computador_escolhe_jogada (2, 3) == 2):
        print ("ok")
    else:
        print ("nok")    
    if (computador_escolhe_jogada (4, 4) == 4):
        print ("ok")
    else:
        print ("nok")
