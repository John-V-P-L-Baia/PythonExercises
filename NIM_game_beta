def usuario_escolhe_jogada (n, m):
    jogadaValida = False
    while (jogadaValida == False):
        try:
            pecasRetiradas = int(input("Quantas peças você vai tirar? "))
            print()
        except ValueError as ve:
            print ("Oops! Jogada inválida! Tente de novo.")
            print ()
            continue
        if (pecasRetiradas > 0 and pecasRetiradas <= n and pecasRetiradas <= m):
            jogadaValida = True
            pecasRetiradas = int(pecasRetiradas)
            return pecasRetiradas
            break
        else:
            print ("Oops! Jogada inválida! Tente de novo.")
            print ()

def computador_escolhe_jogada (n, m):
    pecasRetiradas = 1
    while (pecasRetiradas < m and (n - pecasRetiradas) >= 0):
        if (n - pecasRetiradas == 0):
            break
        elif ((n - pecasRetiradas) % (m +1) == 0):
            break
        else:
            pecasRetiradas += 1
    return pecasRetiradas

def partida():
    start = False
    while (start == False):
        try:
            print ("Bem-vindo ao jogo do NIM! Escolha:")
            print ()
            print ("1 - para jogar uma partida isolada.")
            print ("2 - para jogar um campeonato.")
            print ()
            modoDeJogo = int(input())
            print()
        except ValueError as ve:
            print ("Oops! Esse modo de jogo é inválido! Tente de novo.")
            print ()
            continue
        if (modoDeJogo <= 2 and modoDeJogo > 0):
            start = True
        else:
            print ("Oops! Esse modo de jogo é inválido! Tente de novo.")
